<p style="color: green"><%= notice %></p>

<h1><%= t('views.common.title_index', name: i18n_pluralize(Book.model_name.human)) %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t('views.common.show', name: Book.model_name.human.downcase), book %>
      </p>
    </div>
  <% end %>
</div>

<%= paginate @books %>

<nav class="page-nav">
    <%= link_to t('views.common.new', name: Book.model_name.human.downcase), new_book_path %>
    <%= link_to t('views.devise.sign_out'), destroy_account_session_path, data: { turbo_method: :delete } %>
    <%= link_to t('views.common.title_edit', name:i18n_pluralize(Account.model_name.human)), edit_account_registration_path %>
    <%= link_to t('views.common.title_edit', name:BookUser.human_attribute_name(:profile)), 'profile/edit' %>
    <%= link_to t('views.common.title_index', name: i18n_pluralize(BookUser.model_name.human)), 'book_users' %>
</nav>
