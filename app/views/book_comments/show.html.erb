<%= render @book_comment %>

<div>
  <% if current_user == @book_comment.user %>
    <%= link_to t('views.common.edit', name: BookComment.model_name.human.downcase), edit_book_comment_path(@book_comment) %> |
  <% end %>
  <%= link_to t('views.common.back', name: BookComment.model_name.human.downcase), book_path(@book_comment.book) %>
  <% if current_user == @book_comment.user %>
    <%= button_to t('views.common.destroy', name: BookComment.model_name.human.downcase), @book_comment, method: :delete %>
  <% end %>
</div>
