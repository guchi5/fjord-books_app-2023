<h2><%= t('views.devise.log_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, t('views.devise.e-mail') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('views.devise.password') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('views.devise.remember_me')%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('views.devise.log_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
